generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(uuid())
  username  String    @unique
  password  String
  createdAt DateTime  @default(now())
  tags      Tag[]
  expenses  Expense[]
}

model Tag {
  id       String    @id @default(uuid())
  userId   String
  user     User      @relation(fields: [userId], references: [id])
  name     String
  color    String
  expenses Expense[]

  @@unique([userId, name])
}

model Expense {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  tagId     String
  tag       Tag      @relation(fields: [tagId], references: [id])
  amount    Float
  date      DateTime
  createdAt DateTime @default(now())
}
